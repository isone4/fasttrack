{% extends 'base.html.twig' %}

{% block title %}Hello RepoController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table style="width:100%">
            <tr>
                    <th>ID:</th>
                    <th>Organization:</th>
                    <th>Repository:</th>
                    <th>Provider:</th>
                    <th>Trust Points:</th>
                    <th>Creation Date:</th>
            </tr>

            {% for repository in repositories %}
            <tr>
                <td> {{ repository.getId }} </td>
                <td> {{ repository.getOrgname }} </td>
                <td> {{ repository.getReponame }} </td>
                <td> {{ repository.getProvider }} </td>
                <td> {{ repository.getTrustpoints }} </td>
                <td>{{ repository.getCreationdate|date("m.d.Y") }}</td>
            </tr>

            {% endfor %}
    </table>
</div>
{% endblock %}
