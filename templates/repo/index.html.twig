{% extends 'base.html.twig' %}

{% block title %}Hello RepoController!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.css">
{% endblock %}

{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js"></script>
<script>
    $(document).ready( function () {
    $('#myTable').DataTable();
})
</script>
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <table id="myTable">
        <thead>
            <tr>
                    <th>ID:</th>
                    <th>Organization:</th>
                    <th>Repository:</th>
                    <th>Provider:</th>
                    <th>Trust Points:</th>
                    <th>Creation Date:</th>
            </tr>
        </thead>

        <tbody>
            {% for repository in repositories %}
            <tr>
                <td> {{ repository.id }} </td>
                <td> {{ repository.orgname }} </td>
                <td> <a href="" target="_blank"> {{ repository.reponame }} </a></td>
                <td> {{ repository.provider }} </td>
                <td> {{ repository.trust }} </td>
                <td> {{ repository.creationdate|date("Y.m.d") }}</td>
            </tr>

            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}